[push]
    default = simple

[fetch]
    prune = true

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

[bash]
    showDirtyState = false
[pull]
    rebase = false
