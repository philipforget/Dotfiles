# vim:set ft=sh:
eval "$(/opt/homebrew/bin/brew shellenv)"
[ -f ~/.aliases_mac ] && . ~/.aliases_mac


brewprefix="$(brew --prefix)"

[[ -f "${brewprefix}/etc/bash_completion" ]] && . "${brewprefix}/etc/bash_completion"

alias vlc="/Applications/VLC.app/Contents/MacOS/VLC"

# Add the brew-installed google-cloud-sdk bin to PATH and load autocomplete for it
[[ -f "${brewprefix}/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.bash.inc" ]] && source "${brewprefix}/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.bash.inc"
[[ -f "${brewprefix}/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.bash.inc" ]] && source "${brewprefix}/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.bash.inc"

random_word() {
    python3 -c 'from random import choice; print(choice(open("/usr/share/dict/words", "r").readlines()).strip().lower())'
}


# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/philipforget/Downloads/google-cloud-sdk/path.bash.inc' ]; then . '/Users/philipforget/Downloads/google-cloud-sdk/path.bash.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/philipforget/Downloads/google-cloud-sdk/completion.bash.inc' ]; then . '/Users/philipforget/Downloads/google-cloud-sdk/completion.bash.inc'; fi
